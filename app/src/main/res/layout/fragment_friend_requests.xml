<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendRequestsFragment">

    <TextView
        android:id="@+id/testText"
        android:layout_width="411dp"
        android:layout_height="707dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendRequestRecyclerView"
        android:layout_width="0dp"
        android:layout_height="460dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="199dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/testText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friendRequestEmptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no friend requests."
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/testText"
        app:layout_constraintTop_toTopOf="@+id/testText" />

</androidx.constraintlayout.widget.ConstraintLayout>